<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Testes Upside</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/simple-sidebar.css" rel="stylesheet" />
    <script src="~/scripts/jquery.min.js"></script>
    <script src="~/scripts/jquery.mask.min.js"></script>
    <script src="~/scripts/bootstrap.bundle.min.js"></script>
    <script src="~/scripts/jquery-validate.min.js"></script>
</head>

<body>

    <div id="wrapper">

        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="/Home/Index">
                        Home
                    </a>
                </li>
                <li>
                    <a href="/EnviarDadosAPI/Index">Enviar Dados API</a>
                </li>
                <li>
                    <a href="/Candidatos/Index">Ensalamento de Candidatos</a>
                </li>
            </ul>
        </div>

        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div style="text-align:right">
                    <a href="#menu-toggle" class="btn btn-secondary" id="menu-toggle">Toggle Menu</a>
                </div>
                @{

                    string mensagem = TempData["AlertaSucesso"] == null ? string.Empty : TempData["AlertaSucesso"].ToString();
                    if (!String.IsNullOrEmpty(mensagem))
                    {
                        <div class="alert alert-success">
                            @mensagem
                        </div>
                    }
                }
                @RenderBody()
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#wrapper").toggleClass("toggled");
        });

        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

</body>

</html>